<%= partial "partials/header" %>
<div class="grid">
	<div class="col-3-12">
		<%= partial "sections/logo" %>
		<%= partial "sections/affix" %>
	</div>
	<div class="col-9-12">
		<section class="main-section">
			<article class="post">
				<header class="post-header">
					<h1 class="post-title"><%= current_article.title %></h1>
					<h2 class="post-date"><i class="fa fa-clock-o"></i> <%= current_article.date.strftime('%b %e %Y') %></h2>
					<h2 class="post-tags"><i class="fa fa-tags"></i> <span>Tagged:</span> <%= current_article.data.tags %></h2>
				</header>
				<div class="post-body">
					<%= yield %>
					<%= disqus %>
				</div>
			</article>
		</section>
	</div>
</div>